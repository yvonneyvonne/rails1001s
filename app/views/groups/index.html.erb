<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right")%>
  </div>

  <div class="group">
    <%= link_to("New Post", new_group_path, class: "btn btn-primary pull-right")%>
  </div>

<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>主題</td>
        <td>內容</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each_with_index do |group ,index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
            <%= link_to("修改", edit_group_path(group), class: "btn btn-sm btn-default")%>
            <%= link_to("刪除", group_path(group), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>